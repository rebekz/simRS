# =============================================================================
# SIMRS Environment Configuration
# Copy this file to .env and update with your values
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
DEBUG=false

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=simrs
POSTGRES_PASSWORD=simrs_password
POSTGRES_DB=simrs
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# MinIO Object Storage
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# -----------------------------------------------------------------------------
# JWT Token Settings
# -----------------------------------------------------------------------------
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Frontend Settings
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=SIMRS
FRONTEND_PORT=3000

# -----------------------------------------------------------------------------
# Backend API Settings
# -----------------------------------------------------------------------------
BACKEND_PORT=8000

# -----------------------------------------------------------------------------
# Nginx Reverse Proxy
# -----------------------------------------------------------------------------
HTTP_PORT=80
HTTPS_PORT=443

# -----------------------------------------------------------------------------
# BPJS Integration (Optional - leave empty if not using)
# -----------------------------------------------------------------------------
BPJS_CONSUMER_ID=
BPJS_CONSUMER_SECRET=

# BPJS API URLs (default values)
# BPJS_BASE_URL=https://apijkn.bpjs-kesehatan.go.id
# BPJS_BASE_URL_VCLAIM=https://new-api.bpjs-kesehatan.go.id:8080

# -----------------------------------------------------------------------------
# SATUSEHAT Integration (Optional - leave empty if not using)
# -----------------------------------------------------------------------------
SATUSEHAT_CLIENT_ID=
SATUSEHAT_CLIENT_SECRET=

# SATUSEHAT API URLs (default values)
# SATUSEHAT_BASE_URL=https://api-satusehat.kemkes.go.id
# SATUSEHAT_AUTH_URL=https://api-satusehat.kemkes.go.id/oauth2/v1
